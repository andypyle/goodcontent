extends manager.layout.pug

block content
	header.Editor__Header
		h1.Editor__Header__Heading
			| Portfolio
			i.fa.fa-angle-double-right
			| New Project
		.Editor__Header__Buttons
			a.Button.Button--green(href='#') 
				i.fa.fa-angle-left
				| Back
			a.Button.Button--red(href='#') 
				i.fa.fa-trash
				| Delete
	section.Editor__Main
		form.Form
			.Form__Row
				.Form__InputGroup
					label.Form__Label(for='InputText1') Input Text Label
					input.Form__InputText(name='InputText1', id='InputText1', placeholder='Input Text')
				.Form__InputGroup
					label.Form__Label(for='Select1') Select Box Label
					select.Form__Select(name='Select1', id='Select1')
						option(value='Item 1') Item 1
						option(value='Item 2') Item 2
						option(value='Item 3') Item 3
			.Form__Row
				.Form__InputGroup
					label.Form__Label(for='TextArea1') Textarea Label
					textarea.Form__TextArea(name='TextArea1', id='TextArea1', placeholder='Textarea text.')
			.Form__Row
				.Form__InputGroup--horizontal
					input.Form__CheckBox(type='checkbox', name='CheckBox1', id='CheckBox1')
					label.Form__CheckBox__Clickable(for='CheckBox1')
					span.Form__CheckBox__Label CheckBox 1
				.Form__InputGroup--horizontal
					input.Form__CheckBox(type='checkbox', name='CheckBox2', id='CheckBox2')
					label.Form__CheckBox__Clickable(for='CheckBox2')
					span.Form__CheckBox__Label CheckBox 2
				.Form__InputGroup--horizontal
					input.Form__CheckBox(type='checkbox', name='CheckBox3', id='CheckBox3')
					label.Form__CheckBox__Clickable(for='CheckBox3')
					span.Form__CheckBox__Label CheckBox 3
				.Form__InputGroup--horizontal
					input.Form__CheckBox(type='checkbox', name='CheckBox4', id='CheckBox4')
					label.Form__CheckBox__Clickable(for='CheckBox4')
					span.Form__CheckBox__Label CheckBox 4
			.Form__Row.Form__Row--baseline
				.Form__InputGroup
					label.Form__Label(for='InputText1') Input Text Label
					input.Form__InputText(name='InputText1', id='InputText1', placeholder='Input Text')
				.Form__InputGroup
					label.Form__Label(for='InputText1') Input Text Label
					input.Form__InputText(name='InputText1', id='InputText1', placeholder='Input Text')
				.Form__InputGroup
					label.Form__Label(for='FileUpload1') File Upload
					input.Form__FileUpload(type='file', name='FileUpload1', id='FileUpload1')
					label.Form__FileUpload__Clickable(for='FileUpload1')
						i.fa.fa-upload
						span.Form__FileUpload__ButtonText Select File
						span.Form__FileUpload__Progress
			.Form__Row.Form__Row--buttons
				a.Button.Button--blue(href='#')
					i.fa.fa-plus
					| Create object